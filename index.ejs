<script>
  function handleSectionClick(sectionId, headingText) {
    document.querySelectorAll('section').forEach(sec => {
      sec.style.display = 'none';
    });
    document.getElementById(sectionId).style.display = 'block';
    document.querySelector('.jumbotron h1').innerText = headingText;
  }

  document.querySelectorAll('nav a').forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const href = this.getAttribute('href');
      if (href === '/home') {
        handleSectionClick('home', 'Welcome to the Home page');
      } else if (href === '/about') {
        handleSectionClick('about', 'Welcome to the About Me page');
      } else if (href === '/projects') {
        handleSectionClick('projects', 'Welcome to the Projects page');
      } else if (href === '/contact') {
        handleSectionClick('contactForm', 'Welcome to the Contact Us page');
      }
    });
  });
